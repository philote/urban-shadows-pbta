{
  "name": "urban-shadows-pbta",
  "version": "2.0.0",
  "description": "CSS compiler & linting for the urban-shadows-pbta system",
  "scripts": {
    "build": "sass src/scss/urban-shadows-pbta.scss css/urban-shadows-pbta.css --style=expanded --no-source-map",
    "watch": "sass src/scss/urban-shadows-pbta.scss css/urban-shadows-pbta.css --style=expanded --source-map --watch",
    "pushLDBtoJSON": "node ./tools/pushLDBtoJSON.mjs",
    "pullJSONtoLDB": "node ./tools/pullJSONtoLDB.mjs",
    "createSymlinks": "node ./tools/create-symlinks.mjs"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Joseph Hopson",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@foundryvtt/foundryvtt-cli": "^1.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "sass": "^1.53.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.53.0"
  }
}
